<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/open_light_app"
        android:onClick="openLight"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@color/green"
        android:text="@string/title_open_light_app"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/open_h5"
        android:onClick="openH5"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@color/green"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="打开本地H5页面"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/open_cordova"
        android:onClick="openCordova"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@color/green"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="打开Cordova页面"
        android:layout_marginTop="20dp"/>
</LinearLayout>