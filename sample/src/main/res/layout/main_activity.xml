<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/open_light_app"
        android:onClick="openLight"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:text="@string/title_open_light_app"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/open_h5"
        android:onClick="openH5"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="打开本地H5页面"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/open_cordova"
        android:onClick="openCordova"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="打开Cordova页面"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="78dp">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/imageView" />

        <EditText
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="请输入验证码"
            android:ems="10"
            android:id="@+id/editText" />

    </RelativeLayout>


    <TextView
        android:id="@+id/login"
        android:onClick="login"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="登录"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/fragment"
        android:onClick="openFragment"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="打开Fragment"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/openapi"
        android:onClick="openApi"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="发起openapi请求"
        android:layout_marginTop="20dp"/>

</LinearLayout>